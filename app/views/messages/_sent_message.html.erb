<div class="col-start-6 col-end-13 py-3 rounded-lg" id="message-<%=message.id%>">
  <div class="flex items-center flex-row-reverse">
    <div
        class="flex items-center justify-center h-10 w-10 rounded-full bg-sky-700 hover:bg-sky-800 text-white flex-shrink-0"
    >
      <%= message.user.name.first %>
    </div>
    <div
        class="relative mr-3 text-sm bg-sky-100	 py-2 px-4 shadow rounded-xl"
    >
      <div><%= message.source_text %></div>
    </div>
  </div>
</div>
