<div class="flex min-h-screen">
  <%= render partial: 'organizations/settings_sidebar', locals: { active_tab: 'notifications' } %>
  <main class="flex-1 px-8 py-2">
    <%= form_for(current_user, as: :user, url: registration_path(:user), html: { method: :put }) do |f| %>
      <div class="grid grid-cols-2 items-center">
        <h1 class="text-2xl font-semibold mb-6">Notifications</h1>
        <div>
          <%= f.button nil, class:"flex items-center min-w-24 bg-gray-600 hover:bg-black float-right text-white text-sm px-2 py-2 rounded" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 lucide lucide-save"><path d="M15.2 3a2 2 0 0 1 1.4.6l3.8 3.8a2 2 0 0 1 .6 1.4V19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"/><path d="M17 21v-7a1 1 0 0 0-1-1H8a1 1 0 0 0-1 1v7"/><path d="M7 3v4a1 1 0 0 0 1 1h7"/></svg>
            Save
          <% end %>
        </div>
      </div>
      <div class="flex space-x-8">
        <div class="w-1/3 space-y-4">
          <h2 class="text-lg font-semibold">Notification types</h2>
          <p class="text-muted-foreground">
            Review each type to ensure you're set up to get notification types when you want them
          </p>
        </div>
        <div class="w-2/3 space-y-4">
          <div class="p-4 border rounded-md bg-muted">
            <div class="flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-alert"><circle cx="12" cy="12" r="10"/><line x1="12" x2="12" y1="8" y2="12"/><line x1="12" x2="12.01" y1="16" y2="16"/></svg>
              <p class="text-destructive">
                Desktop notifications are off. We highly recommend that you turn on desktop notifications so that you
                get alerted of new messages.
              </p>
            </div>
          </div>
          <div class="space-y-2">
            <h3 class="text-sm font-semibold">Desktop</h3>
            <p class="text-muted-foreground">None</p>
          </div>
          <div class="space-y-2">
            <h3 class="text-sm font-semibold">Email notifications</h3>
            <input
              class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
              placeholder="Enter a valid email"
              type="email"
              value="sameedatif68@gmail.com"
              disabled
            />
          </div>
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2 w-full bg-gray-600 text-white hover:bg-black">
            Send test notification
          </button>
        </div>
      </div>
      <div class="flex space-x-8 py-4">
        <div class="w-1/3 space-y-4">
          <h2 class="text-lg font-semibold">Notification triggers</h2>
          <p class="text-muted-foreground">Specify when and how you want notifications sent</p>
        </div>
        <div class="w-2/3 space-y-4">
          <div class="p-4 border rounded-md">
            <div class="space-y-4">
              <div>
                <h3 class="text-sm font-semibold">When you've been assigned to a conversation</h3>
                <div class="space-y-1">
                  <div class="flex items-center">
                      <%=f.check_box :notification_conversation_assigned_email, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500"%>
                      <%=f.label :notification_conversation_assigned_email, "Email notifications", class:"ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"%>
                  </div>
                </div>
              </div>
              <div>
                <h3 class="text-sm font-semibold">When customer sends a message</h3>
                <p class="text-muted-foreground text-sm">
                  You won't be notified of new messages from conversations assigned to other staff.
                </p>
                <div class="space-y-1">
                  <div class="flex items-center">
                      <%=f.check_box :notification_message_received_email, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500"%>
                      <%=f.label :notification_message_received_email, "Email notifications", class:"ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"%>
                  </div>
                </div>
              </div>
              <div>
                <h3 class="text-sm font-semibold">When a message has been unread for 15 minutes</h3>
                <p class="text-muted-foreground text-sm">
                  You won't be notified of unread messages from conversations assigned to other staff.
                </p>
                <div class="space-y-1">
                  <div class="flex items-center">
                      <%=f.check_box :notification_message_reminder_email, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500"%>
                      <%=f.label :notification_message_reminder_email, "Email notifications", class:"ms-2 text-sm font-medium text-gray-900 dark:text-gray-300"%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </main>
</div>
