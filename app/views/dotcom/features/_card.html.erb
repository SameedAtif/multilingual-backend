<%# _feature_card.html.erb %>
<% if !feature %>
  <div class="w-full h-full flex flex-col items-center justify-center text-gray-400 p-8 text-center">
    <%= lucide_icon('sparkles', class: 'w-12 h-12 mb-4') %>
    <h3 class="text-xl font-medium mb-2">Select a Feature</h3>
    <p>Choose a feature from the list to see more details</p>
  </div>
<% else %>
  <div class="p-8">
    <div class="mb-6">
      <span class="inline-block px-3 py-1 rounded-full text-sm font-medium mb-4 <%= feature[:status] == 'live' ? 'text-white bg-green-800' : feature[:status] == 'wip' ? 'text-white bg-yellow-300' : 'text-white bg-orange-700' %>">
        <%= feature[:status].upcase %>
      </span>
      <div class="flex items-center gap-3 mb-2">
        <%= lucide_icon(feature[:icon], class: 'w-8 h-8 text-[#0E7490]') %>
        <h2 class="text-3xl font-bold text-gray-900"><%= feature[:name] %></h2>
      </div>
      <p class="text-gray-500 text-sm pl-11"><%= feature[:category] %></p>
    </div>
    <div class="prose prose-cyan max-w-none pl-11">
      <p class="text-gray-600 text-lg leading-relaxed mb-8">
        <%= feature[:description] %>
      </p>
    </div>
    <% if feature[:status] == 'wip' || feature[:status] == 'roadmap' %>
      <div class="pl-11">
        <button onclick="<%= on_vote_function %>" class="bg-[#0E7490] text-white px-6 py-3 rounded-lg hover:bg-[#0c6075] transition-colors font-medium flex items-center gap-2">
          <%= lucide_icon('sparkles', class: 'w-4 h-4') %>
          Vote for this feature
        </button>
      </div>
    <% end %>
  </div>
<% end %>
